<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sigmar_one"
                android:text="@string/Pergunta"
                android:textColor="@color/Orange"
                android:textSize="34sp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/logo"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="match_parent"
            android:layout_height="255dp"
            android:src="@drawable/galo_png"
            tools:srcCompat="@drawable/galo_png" />

        <RadioGroup
            android:id="@+id/rdgPergunta7"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/rdbErrado19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gana"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rdbErrado20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Moçambique"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rdbErrado21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanzânia"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rdbCorreto7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Uganda"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnResponder7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="Responder"
                android:text="RESPONDER"
                android:backgroundTint="@color/Green"
                android:textSize="24sp" />
        </RadioGroup>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>