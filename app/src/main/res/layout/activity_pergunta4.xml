<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sigmar_one"
                android:text="@string/Pergunta"
                android:textColor="@color/Orange"
                android:textSize="34sp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/logo"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:src="@drawable/angola_png"
            tools:srcCompat="@drawable/angola_png" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rdgPergunta4">

            <RadioButton
                android:id="@+id/rdbCorreto4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Angola"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rdbErrado10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BÃ©lgica"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rdbErrado11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Congo"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rdbErrado12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Egito"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnResponder4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="Responder4"
                android:text="RESPONDER"
                android:backgroundTint="@color/Green"
                android:textSize="24sp" />

        </RadioGroup>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>