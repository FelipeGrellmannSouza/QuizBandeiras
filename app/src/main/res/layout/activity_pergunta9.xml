<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sigmar_one"
                android:text="@string/Pergunta"
                android:textColor="@color/Orange"
                android:textSize="34sp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/logo"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="match_parent"
            android:layout_height="284dp"
            app:srcCompat="@drawable/alemanha_png"
            tools:srcCompat="@drawable/alemanha_png" />

        <RadioGroup
            android:id="@+id/rdgPergunta9"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioButton
                android:id="@+id/rdbErrado25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bulgária"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rdbErrado26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bélgica"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rdbErrado27"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Polônia"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rdbCorreto9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alemanha"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnResponder9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="Responder"
                android:text="RESPONDER"
                android:backgroundTint="@color/Green"
                android:textSize="24sp" />

        </RadioGroup>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>