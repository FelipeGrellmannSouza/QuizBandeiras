<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Pergunta1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sigmar_one"
                android:text="@string/Pergunta"
                android:textColor="@color/Orange"
                android:textSize="34sp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:src="@drawable/logo"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="258dp"
            android:src="@drawable/bandeirabrasil" />

        <RadioGroup
            android:id="@+id/rdgPergunta1"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <RadioButton
                android:id="@+id/rdbCorretoPergunta1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Brasil"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rdbErrado1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jamaica"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rdbErrado2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Portugal"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/rdbErrado3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MÃ©xico"
                android:textSize="20sp" />
        </RadioGroup>

        <Button
            android:id="@+id/btnResponder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="Responder"
            android:text="RESPONDER"
            android:textSize="24sp"
            android:backgroundTint="@color/Green"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>